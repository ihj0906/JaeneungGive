function regDonationClass() {
	var form = document.give_frm;
	var talent1 = document.getElementById("talent1");
	var talent1_ = talent1.options[talent1.selectedIndex].value;
	if (form.talent2.value == "" || form.people.value == ""
			|| form.subject.value == "" || form.content.value == ""
			|| form.location.value == "" || form.closing_date.value == "") {
		alert("빈칸을 모두 채워주세요.");
	} else if (talent1_ == "선택") {
		alert("기부재능 카테고리를 선택하세요.");
	} else {
		form.category.value = "기부";
		form.key.value = "";
		var now = new Date();
		alert(now);
		form.submit();
	}

}


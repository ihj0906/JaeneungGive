@charset "UTF-8";

.search {
	padding:2%;
	margin:auto;
}
.search_container{
	float:center;
	margin:auto;
}
.search_container input[type="text"] {
	border:3px solid;
	font-size:30px;
}
.search_container input[type="button"] {
	border:3px solid;
	font-size:30px;
}


.giveMenu {
	margin:auto;
}
.giveMenu ul {
	list-style:none;
}
.giveMenu ul li {
	display:inline-block;
	border: 2px solid;
	padding:1%;
	padding-left:4%;
	padding-right:4%;
}


.giveList, .giveWrite, .giveDetail {
	padding:2%;
}
.giveList_table, .giveWrite_table, .giveDetail_table {
	margin:auto;
	border-collapse:collapse;
	text-align:center;
	white-space:nowrap;
}
.giveList #giveReg {
	margin-bottom:2%;
	float:center;
}
.giveList_table thead {
	border-bottom:double;
	font-weight:bold;
}
.giveList_table td {
	border:1px solid;
	padding:10px;
	padding-left:15px;
	padding-right:15px;
}
/* .giveList_table #listContent {
	text-overflow:ellipsis;
	overflow:hidden;
	border:dotted;
} */
.giveList_table #dday {
	font-size:1.5em;
	color:orange;
	font-weight:bold;
}


.giveWrite_table th {
	padding:1%;
	border:1px solid;
	border-right:double;
	font-weight:bold;
	text-align:center;
}
.giveWrite_table td {
	padding:1%;
	padding-left:2%;
	border:1px solid;
	text-align:left;
}
.giveWrite_table #subject, #content {
	width:90%;
}
.giveWrite_table #giveReg_ok, #giveReg_calcel {
	margin-top:2%;
}










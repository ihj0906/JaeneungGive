@charset "UTF-8";

/* 공통 시작 */
a {
	text-decoration: none;
	color: #000;
}

li {
	list-style: none;
}

article {
	max-width: 1500px;
}

table, th, td {
	border: 1px solid gray;
	text-align: center;
}
/* 공통 끝 */

/* admin_header 시작 */
.header_logo {
	display: flow-root;
	margin: auto;
}

.brand {
	float: left;
	font-size: 30px;
	padding: 10px 100px;
}

.login {
	float: right;
	padding: 20px 100px;
}

.header_nav {
	text-align: center;
}

.header_menu {
	padding: 0 80px;
	list-style: none;
	display: inline-block;
}
/* admin_header 끝 */ 

/* board 시작 */
.menu_board {
	padding: 20px 100px;
}

.admin_table {
	max-width: 1500px;
}

table {
	width: 100%;
}

table, th, td {
	border: 1px solid gray;
	text-align: center;
}

.qna_content {
	height: 200%;
}
/* board 끝 */

/* footer 시작 */
footer {
	background-color: #C6D6F7;
	width: 100%;
	height: 10%;
	float: left;
}

footer #copy {
	float: center;
	text-align: center;
	padding: 1.5%;
	font-size: 12px;
	font-weight: bold;
	color: #000000;
}

.clear {
	clear: both;
}
/* footer 끝 */

<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ include file="../header.jsp" %>

<link href="/css/give.css" rel="stylesheet" type="text/css" />

<!-- 메인 시작 -->
<article>
	<form method="post">
	<div class="search">
		<div class="search_container">
			<input type="text" placeholder="검색어를 입력해주세요"  />
			<input type="button" value="검색" />
		</div>
	</div>
	
	<div class="giveMenu">
		<ul>
			<li><a href="javascript:void(0);" onclick="menu_list('8')">언어</a></li>
			<li><a href="javascript:void(0);" onclick="menu_list('9')">예술</a></li>
			<li><a href="javascript:void(0);" onclick="menu_list('10')">스포츠</a></li>
			<li><a href="javascript:void(0);" onclick="menu_list('11')">컴퓨터</a></li>
			<li><a href="javascript:void(0);" onclick="menu_list('12')">그외</a></li>
		</ul>
	</div>
	
	<div class="giveList">
		<div class="giveList_container" width="80%">
			<input type="hidden" id="board" value="exchange">
			<input type="hidden" name="no" value="${exchange.no }">
			<c:if test="${empty keyword}">
				<p id="search_category">◎ 검색결과 : 전체</p>
			</c:if>
			<c:if test="${!empty keyword}">
				<p id="search_category">◎ 검색결과 : ${keyword}</p>
			</c:if>
			<input type="button" id="giveReg" value="새 클래스 등록" onclick="newClassWriteForm('${loginInfo.id}')">
			<table class="giveList_table" width="100%">
				<thead>
					<tr>
						<td>기부 재능</td>
						<td>희망 재능</td>
						<td>작성자</td>
						<td>제목</td>
						<td>내용</td>
						<td>위치</td>
						<td>마감일</td>
					</tr>
				</thead>
				<c:forEach var="exchange" items="${exchangeList}">
					<tr>
						<td>${exchange.give_talent1}&ensp;/&ensp;${exchange.give_talent2}</td>
						<td>${exchange.wish_talent1}&ensp;/&ensp;${exchange.wish_talent2}</td>
						<td>${exchange.id}</td>
						<td><a href="/give/exchangeDetail&${exchange.no}">${exchange.subject}</a></td>
						<td><a href="/give/exchangeDetail&${exchange.no}">${exchange.content}</a></td>
						<td>${exchange.location}</td>
						<td>${exchange.closing_date}&ensp;<span id=dday>D-6</span></td>
					<!-- 북마크 시작-->
						<td>
						<c:choose>
								<c:when test="${empty loginInfo}">
										<input type="image" class="bookmarkImage" id="${exchange.no}" src="/images/unbookmark.png" onclick="bookmark('2','${exchange.no}')">
								</c:when>
								<c:when test="${exchange.book_id == loginInfo.id}">
										<input type="image" class="bookmarkImage"  id="${exchange.no}" src="/images/bookmark.png" onclick="bookmark('2','${exchange.no}')">
								</c:when>
								<c:otherwise>
										<input type="image" class="bookmarkImage"  id="${exchange.no}" src="/images/unbookmark.png" onclick="bookmark('2','${exchange.no}')">
								</c:otherwise>
								</c:choose>
						</td>
						<!-- 북마크 종료 -->
					</tr>
				</c:forEach>
			</table>
		</div>	
	</div>	
	</form>
	<div class="clear"></div>
</article>
<!-- 메인 끝 -->

<%@ include file="../footer.jsp" %>
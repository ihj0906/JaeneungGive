
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="../header.jsp"%>
<%@ include file="sidemenu.jsp"%>

<div class="note_area">
	<h4>받은 쪽지함</h4>
	<a class="del_btn" href="#"><span class="bu_del"></span>삭제</a>
	<table class="notelist">
		<tr>
			<th width=10%;><input type="checkbox"></th>
<!-- 			<th width=10%;>분류</th> -->
			<th width=50%>내용</th>
			<th width=10%>보낸사람</th>
			<th width=20%>보낸날짜</th>
			<th width=10%>읽음</th>
		</tr>
		<c:forEach var="message" items="${messageList}">
			<tr>
				<td><input type="checkbox"></td>
			<!-- 	<td>분류</td> -->
				<td><a href=#>${message.content}</a></td>
				<td>${message.fromId}</td>
				<td><fmt:formatDate type="date" value="${message.sendTime}"/></td>
				<c:if test="${message.readYn==1}">
				<td>읽음</td>
				</c:if>
				<c:if test="${message.readYn!=1}">
				<td>읽지 않음</td>
				</c:if>
			</tr>
		</c:forEach>
		
	</table>
	<div class="paginate">
		<input type="button" value="<<"> <input type="button"
			value="<"> <input type="button" value="1"> <input
			type="button" value=">"> <input type="button" value=">>">
	</div>
</div>


<%@ include file="../footer.jsp"%>

package config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.ViewControllerRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

import controller.JoinController;
import controller.LoginController;
import controller.LogoutController;
import controller.MessageController;

@Configuration
public class ControllerConfig implements WebMvcConfigurer {
/*	@Autowired
	private JoinService joinSvc;*/
	
/*	@Autowired
	private LoginService loginSvc;*/
	
/*	@Autowired
	private MessageService messageSvc;*/

	@Override
	public void addViewControllers(ViewControllerRegistry registry) {
		registry.addViewController("/main").setViewName("index");
		registry.addViewController("/index").setViewName("index");
	}

	@Bean
	public JoinController joinController() {
		JoinController joinCtrl = new JoinController();
//		joinCtrl.setJoinService(joinSvc);
		return joinCtrl;
	}
	
	@Bean
	public LoginController loginController() {
		LoginController loginCtrl = new LoginController();
//		loginCtrl.setLoginService(loginSvc);
		return loginCtrl;
	}
	
	@Bean
	public LogoutController logoutController() {
		LogoutController logoutCtrl = new LogoutController();
		return logoutCtrl;
	}
	
	@Bean
	public MessageController messageController() {
		MessageController messageCtrl = new MessageController();
//		messageCtrl.setMessageService(messageSvc);
		return messageCtrl;
	}
}

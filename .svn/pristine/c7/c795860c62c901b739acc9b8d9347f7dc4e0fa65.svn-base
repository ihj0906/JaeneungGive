@charset "UTF-8";

.del_btn {
	border: 1px solid #b4b4b4;
	border-radius: 3.1px;
	text-decoration: none !important;
	color: #000;
	padding: 6px;
	padding-bottom: 4px;
	padding-top: 1px;
}

.bu_del {
	background: url("../images/x-button.gif") no-repeat;
	height: 10px;
	width: 10px;
	cursor: pointer;
	display: inline-block;
	vertical-align: middle;
	margin-right: 2px;
	margin-bottom: 3px;
}

.sidemenu {
	float: left;
	margin-right: 10px;
	text-align: center;
	border-right: 1px solid #b4b4b4;
	padding-right: 20px;
/* 	position: absolute;*/
 	top: 0px;
	bottom: 0;
	/* left: 0; */
	/* right: 0; */
}

.sidemenu ul {
	list-style-type: none;
	padding-right: 40px;
}

.sidemenu ul li {
	text-align: center;
	padding-bottom: 10px;
}

.sidemenu ul li a {
	text-decoration: none;
	color: #000;
}

.note_area {
	padding-left: 200px;
}

.notelist {
	width: 100%; margin-top : 20px;
	padding: 2px;
	border-collapse: collapse;
	text-align: center;
	margin-top: 20px;
}

.notelist th {
	background-color: #e8e8e8;
	padding: 10px;
	border: 1px solid #e8e8e8;
}

.notelist td {
	padding: 10px;
	border-bottom: solid 1px #b4b4b4;
	text-align: center;
}

.notelist td a {
	text-decoration: none;
	color: #000;
}

#subject {
	text-align: left;
}

.paginate {
	text-align: center;
	padding-top: 20px;
}

textarea {
	resize: none;
}

.noteDetail {
	border-bottom: solid 1px #b4b4b4;
	border-top: solid 1px #b4b4b4;
	width: 100%;
	margin-bottom: 20px;
}

.noteDetail th {
	width:90px;
	font-weight:bold;
	/* padding: 5px; */
	text-align: left;
}

.noteDetail td {
	padding: 5px;
}

.noteDetail #content {
	padding-top: 20px;
	padding-bottom: 20px;
	border-top: solid 1px #b4b4b4;
	/* text-align: left; */
}

button.j_category {
    padding-bottom: 5px;
    margin-right: 10px;
    /* margin-left: 20px; */
}



@charset "UTF-8";

.search {
	padding:2%;
	margin:auto;
}
.search_container{
	float:center;
	margin:auto;
}
.search_container input[type="text"] {
	border:3px solid;
	font-size:30px;
}
.search_container input[type="button"] {
	border:3px solid;
	font-size:30px;
}


.giveMenu {
	margin:auto;
}
.giveMenu ul {
	list-style:none;
}
.giveMenu ul li {
	display:inline-block;
	border: 2px solid;
	padding:1%;
	padding-left:4%;
	padding-right:4%;
}


.giveList, .giveWrite, .giveDetail {
	padding:2%;
}
.giveList_container, .giveWrite_container, .giveDetail_container {
	width:80%;
	margin:auto;
}
.giveList_table, .giveWrite_table, .giveDetail_table {
	margin:auto;
	border-collapse:collapse;
	white-space:nowrap;
}

#search_category {
	float:left;
	margin-left:4%;
	margin-bottom:2%;
}
.giveList #giveReg {
	margin-top:1%;
	margin-bottom:2%;
	margin-right:4%;
	float:right;
}
.giveList_table thead {
	border-bottom:double;
	font-weight:bold;
	text-align:center;
}
.giveList_table td {
	border:1px solid;
	/* padding:10px;
	padding-left:15px;
	padding-right:15px; */
}
/* .giveList_table #listContent {
	text-overflow:ellipsis;
	overflow:hidden;
	border:dotted;
} */
.giveList_table #dday, .giveDetail #dday {
	font-size:1.5em;
	color:orange;
	font-weight:bold;
}

.giveWrite_table th ,.giveDetail_table th {
	padding:1%;
	border:1px solid;
	border-right:double;
	font-weight:bold;
	text-align:center;
}
.giveWrite_table td {
	padding:1%;
	padding-left:2%;
	border:1px solid;
	text-align:left;
}
.giveWrite_table #subject, #content {
	width:90%;
}
.giveWrite #giveReg_ok, #giveReg_calcel {
	margin:1.5%;
}

.giveDetail_table th {
	padding:1px;
	border:2px solid #7F8FA8;
	border-right:5px double #7F8FA8;
	font-weight:bold;
	text-align:center;
}
.giveDetail_table td {
	padding:1%;
	padding-left:2%;
	border:2px solid #7F8FA8;
	text-align:left;
}
.giveDetail #request {
	margin:1.5%;
}










.clear {clear:both;}
body {
	font-family:sans-serif;
}
body a {
	text-decoration:none;
	font-family:sans-serif;
}
#wrap {
	max-width:1500px;
	min-width:1000px;
	height:100%;
	margin:auto;
}


header {
	width:100%;
	height:25%;
	float:center;
	position:relative;
	z-index:2;
}
header a {
	color:gray;
}
header a:hover {
	font-weight:bold;
}

.top {
	display: flex;
}
.top_container {
	width: 100%;
	height:20%;
	padding-top:1%;
	padding-left:3%;
	padding-right:3%;
	margin-right: auto;
	margin-left: auto;
}
#logo {
	width:20%;
	height:90%;
	float:left;
}
#logo img {
	width:100%;
	height:100%;
}
#logo_menu {
	float:right;
}
#logo_menu ul {
	list-style:none;
}
#logo_menu ul li {
	float:left;
}

.header_menu {
	display: flex;
}
.header_menu_container {
	width: 100%;
	height:20%;
	padding:1%;
	margin-right: auto;
	margin-left: auto;
	border:dotted;
}
.header_menu_container ul {
	list-style:none;
	padding:auto;
	margin:auto;
	border:dotted red;
}
.header_menu_container ul li {
	display:inline-block;
	position:relative;
	padding:1.5%;
	float:left;
	border:3px solid white;
	background-color:#BFBSA9;
	font-size:1vw;
	border:dotted blue;
	text-align:center;
}
.header_menu_container ul li ul {
	/* display:none; */
	position:absolute;
	width:100%;
	padding-top:10%;
	padding-left:0;
	margin:0;
}
.header_menu_container ul li ul li {
	width:85%;
	
}
/* .header_menu_container li:hover ul {
	display:block;
} */



article {
	background-color:#EBE5E4;
	width:100%;
	height:60%;
	float:center;
	text-align:center;
	position:relative;
	z-index:1;
}
/* article div {
	float:center;
}
article nav {
	float:center;
} */

.search {
	display: flex;
}
.search_container {
	position:relative;
	width:100%;
	height:60%;
	padding:2%;
	margin-right: auto;
	margin-left: auto;
}
.search_container img {
	width:100%;
}
.search_container .search_textfield {
	position: absolute;
	margin:auto;
}
.search_container input[type="text"] {
	font-size:3vw;
	background: white;
	border:none;
}


footer {
	background-color:#C6D6F7;
	width:100%;
	height:15%;
	float:center;
	border-top: 6px solid white;
}
footer #copy {
	float:center;
	text-align:center;
	padding:1.5%;
	font-size:1.2vw;
	font-weight:bold;
	color:white;
}









.clear {
	clear: both;
}

body {
	font-family: sans-serif;
	margin: 0px;
}

body a {
	text-decoration: none;
	font-family: sans-serif;
	color: #7F8FA8;
}

#wrap {
	height: 100%;
	margin: auto;
}

header {
	width: 100%;
	height: 25%;
	float: center;
	position: relative;
	z-index: 2;
}

header a {
	/* color: gray; */
	
}

header a:hover {
	font-weight: bold;
}

.top {
	display: flex;
}

.top_container {
	width: 100%;
	height: 20%;
}

#logo {
	/* width: 20%;
	height: 90%; */
	float: left;
}

#logo img {
	width: 100%;
	height: 100%;
}

#logo_menu {
	float: right;
	width: auto;
    margin-right: 25px;
}

#logo_menu ul {
	list-style: none;
}

#logo_menu ul li {
	float: left;
}

.header_menu {
	display: flex;
}

.header_menu_container {
	width: 100%;
	height: 20%;
	padding-top: 10px;
}

.header_menu_container ul {
	list-style: none;
	margin: auto;
	text-align: center;
	width: auto;
	padding-left: 20px;
	padding-top: 30px;
	float: left;
}

.header_menu_container ul li {
	display: inline-block;
	position: relative;
	padding: 5px;
	font-size: 17px;
	text-align: center;
}

.header_menu_container ul li ul {
	display: none;
	position: absolute;
	width: 100%;
	padding-top: 10%;
	padding-left: 0;
	margin: 0;
}

.header_menu_container ul li ul li {
	width: 75%;
}

.header_menu_container ul li ul li a {
	color: white;
}

.header_menu_container li:hover ul {
	display: block;
}

.header_menu_container li.on {
	background: gray none;
}

article {
	background-color: #EBE5E4;
	width: 100%;
	height: 60%;
	float: center;
	text-align: center;
	position: relative;
	z-index: 1;
}
/* article div {
	float:center;
}
article nav {
	float:center;
} */
.main_search {
	display: flex;
	position: relative;
	background-image: url(/images/main_image.gif);
	background-repeat: no-repeat;
	height: 50vh;
	padding: 2%;
	margin: auto;
	height: 50vh;
}

.main_search_container {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

select#search_category {
	float: left;
	width: 75px;
	height: 38px;
	border: 0px;
	color: #4b4b4b;
}

.main_search_container input[type="text"] {
	border: 0px;
	font-size: 16px;
	width: 325px;
	padding: 10px;
	float: left;
}

.main_search_container input[type="button"] {
	width: 50px;
	height: 38.5px;
	border: 0px;
	background: #4b4b4b;
	float: right;
	color: #ffffff;
}

footer {
	background-color: #C6D6F7;
	width: 100%;
	height: 15%;
	border-top: 6px solid white;
	float: left;
}

footer #copy {
	float: center;
	text-align: center;
	padding: 1.5%;
	font-size: 12px;
	font-weight: bold;
	color: #000000;
}


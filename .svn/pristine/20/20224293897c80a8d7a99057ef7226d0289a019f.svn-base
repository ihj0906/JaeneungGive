@charset "UTF-8";

.search {
	height:20%;
	padding:2%;
	margin:auto;
}
.search_container{
	float:center;
	margin:auto;
}
.search_container input[type="text"] {
	border:3px solid;
	font-size:30px;
}
.search_container input[type="button"] {
	border:3px solid;
	font-size:30px;
}


.give_menu {
	height:10%;
	margin:auto;
}
.give_menu ul {
	list-style:none;
}
.give_menu ul li {
	display:inline-block;
	border: 2px solid;
	padding:1%;
	padding-left:4%;
	padding-right:4%;
}


.give {
	height:70%;
	padding:2%;
}
.give_list {
	margin:auto;
	border-collapse:collapse;
	text-align:center;
}
.give_list thead {
	border-bottom:double;
	font-weight:bold;
}
.give_list td {
	border:1px solid;
	padding:10px;
	padding-left:15px;
	padding-right:15px;
}



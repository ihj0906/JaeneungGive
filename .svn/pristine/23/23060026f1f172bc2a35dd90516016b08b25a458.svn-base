function checkedall() {
	if ($('.agree-all').is(":checked")) {
		$('.agree').prop('checked', true);
	} else {
		$('.agree').prop('checked', false);
	}
}

function unchecked(){
	if ($('#agree1').is(":checked") && $('#agree2').is(":checked") ) {
		$('.agree-all').prop('checked', true);
	} else if (!$('#agree1').is(":checked") || !$('#agree2').is(":checked") ) {
		$('.agree-all').prop('checked', false);
	}
}

/**
 * 약관 동의 체크 
 */
function terms(){
	if (!$('#agree1').is(":checked") && !$('#agree2').is(":checked")) {
		alert("이용약관에 동의해주시기 바랍니다.");
		$('#agree1').focus();
	}else if (!$('#agree2').is(":checked")) {
		alert("개인정보수집 및 이용에 동의해주시기 바랍니다. ");
		$('#agree2').focus();
	}else{
		document.join.submit();
	}
}

function join(){
	var doc = document.formm;
	if (!doc.id.value || doc.id.value.trim().length==0) {
		alert("아이디를 입력하여 주세요.");
		document.formm.id.focus();
	} else if (doc.id.value != doc.reid.value) {
		alert("아이디 중복확인을해주세요.");
		doc.id.focus();
	} else if (!doc.pwd.value || doc.pwd.value.trim().length==0) {
		alert("비밀번호를 입력해 주세요.");
		doc.pwd.focus();
	} else if (!doc.pwd.value != !doc.pwdCheck.value) {
		alert("비밀번호가 일치하지 않습니다.");
		doc.pwd.focus();
	} else if (!doc.name.value || doc.name.value.trim().length==0) {
		alert("이름을 입력해 주세요.");
		doc.name.focus();
	} else if (!doc.phone.value || doc.phone.value.trim().length==0) {
		alert("휴대전화를 입력해 주세요.");
		doc.phone.focus();
	} else if (!doc.email.value || doc.email.value.trim().length==0) {
		alert("이메일을 입력해 주세요.");
		doc.email.focus();
	} else {
		doc.submit();
	}
}

function checkId(){
	if (document.formm.id.value == "") {
		alert("아이디를 입력하여 주세요.");
		document.formm.id.focus();
	}
	document.formm.action = "checkId";
	document.formm.submit();
}
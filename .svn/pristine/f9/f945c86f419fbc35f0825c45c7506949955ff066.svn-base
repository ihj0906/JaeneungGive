<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="Keywords" content="회원가입" />
<meta name="Description" content="회원가입" />
<title>회원가입</title>
<style>
div {
	text-align: center;
}

table {
	margin-left: auto;
	margin-right: auto;
	text-align: left;
}

#pagetitle {
	margin: 0 0 40px;
}

#pagetitle h1 {
	text-align: center;
	color: black;
	font-weight: 800;
}

#pagetitle h1 span {
	border-bottom: 2px solid black;
	padding: 0 2px 2px;
}


</style>
</head>
<body>
	<div id="pagetitle">
		<h1><span>회 원 가 입</span></h1>
	</div>
	
	<div>
		<form id="signUpForm" action="signUp" method="post"
			onsubmit="return check()">
			<table style="padding-left:350px;">

				<tr>
					<td style="width: 110px;">아이디</td>
					
					<td style="width: 100px"><input type="text" name="id" /></td>
					<td>(영문소문자/숫자, 4~16자)</td>
				</tr>
				<tr>
					<td>비밀번호</td>
					<td><input type="password" name="passwd" /></td>
					<td>(영문 대소문자/숫자/특수문자 중 2가지 이상 조합, 10자~16자)</td>
				</tr>
				<tr>
					<td>비밀번호 확인</td>
					<td><input type="password" name="confirm" /></td>
				</tr>
				<tr>
					<td>이름</td>
					<td><input type="text" name="name" /></td>
				</tr>
				<tr>
					<td>휴대전화</td>
					<td><input type="text" name="mobile" /></td>
				</tr>
			</table>
			<input type="submit" value="확인" />
			<input type="submit" value="회원가입" />
		</form>
	</div>
</body>
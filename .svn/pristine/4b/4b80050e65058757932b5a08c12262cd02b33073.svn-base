package controller;

import javax.servlet.http.HttpSession;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import dto.LoginCommand;
import dto.LoginInfo;
import service.LoginService;

@Controller
@RequestMapping("/login")
public class LoginController {
	private LoginService loginSvc;
	
	public void setLoginService(LoginService loginSvc) {
		this.loginSvc=loginSvc;
	}
	
	@RequestMapping(method=RequestMethod.GET)
	public String form(LoginCommand loginCommand) {
		return "member/login";
	}
	
	@RequestMapping(method=RequestMethod.POST)
	public String submit(LoginCommand loginCommand, HttpSession session) {
		LoginInfo loginInfo = loginSvc.login(loginCommand.getId(), loginCommand.getPassword());
		session.setAttribute("loginInfo", loginInfo);
		return "index";
	}
	

}

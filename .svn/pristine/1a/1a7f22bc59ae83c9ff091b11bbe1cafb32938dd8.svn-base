.clear {
	clear: both;
}

body {
	font-family: sans-serif;
}

body a {
	text-decoration: none;
	font-family: sans-serif;
}

#wrap {
	max-width: 1500px;
	min-width: 1000px;
	height: 100%;
	margin: auto;
}

header {
	width: 100%;
	height: 25%;
	float: center;
	position: relative;
	z-index: 2;
}

header a {
	/* color: gray; */
	
}

header a:hover {
	font-weight: bold;
}

.top {
	display: flex;
}

.top_container {
	width: 100%;
	height: 20%;
	padding-top: 1%;
	padding-left: 3%;
	padding-right: 3%;
	margin-right: auto;
	margin-left: auto;
}

#logo {
	width: 20%;
	height: 90%;
	float: left;
}

#logo img {
	width: 100%;
	height: 100%;
}

#logo_menu {
	float: right;
}

#logo_menu ul {
	list-style: none;
}

#logo_menu ul li {
	float: left;
}

.header_menu {
	display: flex;
}

.header_menu_container {
	width: 100%;
	height: 20%;
	padding: 1%;
	margin-right: auto;
	margin-left: auto;
	border: dotted gray;
}
.header_menu_container ul {
	list-style: none;
	padding: auto;
	margin: auto;
}
.header_menu_container ul li {
	display: inline-block;
	position: relative;
	padding: 1.5%;
	border: 3px solid;
	background-color: #BFBSA9;
	font-size: 1vw;
	text-align: center;
}
.header_menu_container ul li ul {
	display: none;
	position: absolute;
	width: 100%;
	padding-top: 10%;
	padding-left: 0;
	margin: 0;
}
.header_menu_container ul li ul li {
	width: 85%;
}

.header_menu_container li:hover ul {
	display: block;
}
.header_menu_container li.on {
	background:gray none;
}




article {
	background-color: #EBE5E4;
	width: 100%;
	height: 60%;
	float: center;
	text-align: center;
	position: relative;
	z-index: 1;
}
/* article div {
	float:center;
}
article nav {
	float:center;
} */
.main_search {
	display: flex;
	position: relative;
	background-image: url(/JaeneungGive/images/main_image.gif);
	background-repeat: no-repeat; 
	height : 50vh;
	padding: 2%;
	margin: auto;
	height: 50vh;
}

.main_search_container {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

.main_search_container input[type="text"] {
	border: 3px solid;
	font-size: 30px;
}

.main_search_container input[type="button"] {
	border: 3px solid;
	font-size: 30px;
}

footer {
	background-color: #C6D6F7;
	width: 100%;
	height: 15%;
	float: center;
	border-top: 6px solid white;
}

footer #copy {
	float: center;
	text-align: center;
	padding: 1.5%;
	font-size: 12px;
	font-weight: bold;
	color: #000000;
}
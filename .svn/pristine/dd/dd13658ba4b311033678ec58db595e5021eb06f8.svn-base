@charset "UTF-8";

.sidemenu {
	float: left;
	margin-right: 10px;
	text-align: center;
	/* border-right: 1px solid #b4b4b4; */
	padding-right: 20px;
	/* 	position: absolute;*/
	top: 0px;
	bottom: 0;
	/* left: 0; */
	/* right: 0; */
}
.sidemenu ul {
	list-style-type: none;
	padding-right: 40px;
}
.sidemenu ul li {
	text-align: left;
	padding-bottom: 10px;
}
.sidemenu .left_li {
	padding-left: 10px;
}
.sidemenu ul li a {
	text-decoration: none;
	color: #000;
}


.mygiveList {
	/* padding-left: 200px; */
	position:relative;
	float: left;
	width: 70%;
	border-left: 1px solid #b4b4b4;
	padding-left: 30px;
}
.mygiveList_table {
	width: 100%;
	margin-top: 20px;
	padding: 2px;
	border-collapse: collapse;
	text-align: center;
	margin-top: 20px;
}
.mygiveList_table th {
	background-color: #e8e8e8;
	padding: 10px;
	border: 1px solid #e8e8e8;
}
.mygiveList_table td {
	padding: 10px;
	border-bottom: solid 1px #b4b4b4;
	text-align: center;
	text-overflow: ellipsis;
	overflow: hidden;
	max-width: 500px;
}
.mygiveList_table td a {
	text-decoration: none;
	color: #000;
}

.mygiveList #delete_btn {
	float: right;
	margin:20px;
}


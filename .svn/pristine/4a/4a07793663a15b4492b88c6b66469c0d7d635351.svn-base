<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="../header.jsp" %>

<link href="/css/member.css" rel="stylesheet" type="text/css" />

<article>

	<div id="pagetitle">
		<h1>
			<span>회 원 가 입</span>
		</h1>
	</div>

	<div id=member>
		<form id="signUpForm" action="welcome" method="post"
			onsubmit="return check()">
			<table id=join_table style="padding-left: 350px;">

				<tr>
					<td style="width: 110px;">아이디
					<img src="/images/required.png"	alt="필수">
					</td>
					<td style="width: 100px"><input type="text" name="id" /></td>
					<td>(영문소문자/숫자, 4~16자)</td>
				</tr>
				<tr>
					<td>비밀번호 <img src="/images/required.png" alt="필수">
					</td>
					<td><input type="password" name="password" /></td>
					<td>(영문 대소문자/숫자/특수문자 중 2가지 이상 조합, 10자~16자)</td>
				</tr>
				<tr>
					<td>비밀번호 확인 <img src="/images/required.png" alt="필수">
					</td>
					<td><input type="password" name="confirmPassword" /></td>
				</tr>
				<tr>
					<td>이름 <img src="/images/required.png" alt="필수">
					</td>
					<td><input type="text" name="name" /></td>
				</tr>
				<tr>
					<td>휴대전화 <img src="/images/required.png" alt="필수">
					</td>
					<td><input type="text" name="phone" /></td>
				</tr>
				<tr>
					<td>이메일 <img src="/images/required.png" alt="필수">
					</td>
					<td><input type="text" name="email" /></td>
				</tr>
			</table>
			<input type="button" value="취소" /> <input type="submit" value="회원가입" />
		</form>
	</div>
	
</article>

<%@ include file="../footer.jsp" %>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="/admin/admin_header.jsp"%>

<article>
	<h2 class="menu_board">FAQ 관리</h2>
	<form action="/admin/faqWrite" method="post" name="form">
		<table class="admin_table">
			<tr>
				<th width=10%>제목</th>
				<td width=90%><input type="text" name="subject"></td>
			</tr>
			<tr>
				<th>내용</th>
				<td colspan="2"><textarea name="content" cols="50" rows="5"></textarea>
				</td>
			</tr>
		</table>
		<input class="btn" type="submit" value="입력">
		<input class="btn" type="button" value="목록" onClick=""> <br>
		<table class="borad_table">
		<input type="hidden" value="" id="no" name="no" />
				<tr>
					<th width=30%>제목</th>
					<th width=60%>내용</th>
					<th width=5%>삭제</th>
				</tr>
			<c:forEach var="adminFaqList" items="${adminFaqList}">
			<tr>
				<td>${adminFaqList.subject}</td>
				<td>${adminFaqList.content}</td>
				<td><input type="button"  value="X" onclick="adminFaqDelete('${adminFaqList.no}')"></td>
			</tr>
			</c:forEach>
		</table>
	</form>
</article>

<%@ include file="/admin/admin_footer.jsp"%>
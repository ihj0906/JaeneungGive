@charset "UTF-8";

.del_btn {
	border: 1px solid #b4b4b4;
	border-radius: 3.1px;
	text-decoration: none !important;
	color: #000;
	padding: 2px;
}

.bu_del {
	background: url("../images/x-button.gif") no-repeat;
	height: 10px;
	width: 10px;
	cursor: pointer;
	display: inline-block;
	vertical-align: middle;
	margin-right: 2px;
	margin-bottom: 3px;
}

.sidemenu {
	float: left;
	margin-right: 10px;
	text-align: center;
}

.sidemenu ul {
	list-style-type: none;
	text-align: center;
}

.sidemenu ul li {
	text-align: center;
}

.sidemenu ul li a {
	text-decoration: none;
}

.note_area {
	padding-top: 10px;
}

.notelist {
	margin-top: 10px;
	padding: 2px;
	border-collapse: collapse;
}

.notelist th {
	background-color: #b4b4b4;
	padding: 10px;
}

.notelist td {
	padding: 10px;
	border: solid 1px;
}
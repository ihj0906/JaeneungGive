.clear {clear:both;}
body {
	margin-top:2%;
	margin-bottom:2%;
	margin-left:3%;
	margin-right:3%;
	padding:0;
}
body a {
	text-decoration:none;
}
#wrap {
	width:80%;
	height:100%;
	margin:0;
	margin-right:auto;
	margin-left:auto;
}


header {
	width:100%;
	height:25%;
	float:center;
	border:dotted;
}
header a {
	color:gray;
}
header a:hover {
	font-weight:bold;
}

.top {
	display: flex;
}
.top_container {
	width: 100%;
	height:20%;
	padding-top:1%;
	padding-left:3%;
	padding-right:3%;
	margin-right: auto;
	margin-left: auto;
}
#logo {
	width:20%;
	height:90%;
	float:left;
}
#top_menu {
	float:right;
}
nav #top_menu ul {
	list-style:none;
}
nav #top_menu ul li {
	float:left;
}


.search {
	display: flex;
}
.search_container {
	position:relative;
	width:100%;
	height:60%;
	margin-right: auto;
	margin-left: auto;
}
.search_container img {
	width:100%;
}
.search_container .search_textfield {
	position: absolute;
	top: 50%;
	left: 40%;
}


.menu {
	display: flex;
}
.menu_container {
	width:100%;
	height:20%;
	margin-right: auto;
	margin-left: auto;
	padding-bottom:1%;
}
.menu_container ul {
	list-style:none;
}
.menu_container ul li {
	display:inline-block;
	position:relative;
	float:left;
	border:3px solid gray;
	font-size:1.6vw;
	padding:1.5%;
}
.menu_container ul li ul {
	display:none;
	position:absolute;
	width:100%;
	height:auto;
	padding-top:10%;
	padding-left:0;
	margin:0;
}
.menu_container ul li ul li {
	width:85%;
	text-align:center;
}
.menu_container li:hover ul {
	display:block;
}



article {
	background-color:#EBE5E4;
	width:100%;
	height:60%;
	float:center;
	text-align:center;
	padding-top:3%;
	padding-bottom:3%;
}


footer {
	background-color:#C6D6F7;
	width:100%;
	height:15%;
	float:center;
	border-top: 6px solid white;
}
footer #copy {
	float:center;
	text-align:center;
	padding:1.5%;
	font-size:1.2vw;
	font-weight:bold;
	color:white;
}








